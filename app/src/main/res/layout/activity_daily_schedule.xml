<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        tools:context=".ui.DailyScheduleActivity">
    <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/gameList"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.792"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/gameList"
            android:layout_width="372dp"
            android:layout_height="414dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/datePicker"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/gameListProgressLayout"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@color/whiteTint"
            app:layout_constraintTop_toBottomOf="@+id/datePicker"
            android:alpha="1">
        <ProgressBar
                android:id="@+id/gameListProgressBar"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>